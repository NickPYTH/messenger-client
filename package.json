{
  "name": "messenger",
  "version": "0.1.0",
  "description": "Мессенджер для корпоративного использования",
  "author": {
    "name": "SNV",
    "email": "nicksrnk@gmail.com"
  },
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@reduxjs/toolkit": "^2.9.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "antd": "^5.27.5",
    "electron-is-dev": "^2.0.0",
    "i": "^0.3.7",
    "npm": "^11.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.9.4",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.0.0",
    "wait-on": "^7.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "wait-on http://localhost:3000 && electron .",
    "electron-dev": "concurrently \"npm start\" \"npm run electron\"",
    "electron-build": "npm run build && electron-builder build --linux --publish=never",
    "dist": "npm run electron-build"
  },
  "build": {
    "appId": "ru.gts.messenger",
    "productName": "Корпоративный мессенджер",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js",
      "messenger.desktop"
    ],
    "linux": {
      "target": [
        "AppImage",
        "rpm"
      ],
      "category": "Network",
      "icon": "build/icon.png",
      "desktop": {
        "entry": "messenger.desktop"
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
