{
  // 1. НАСТРОЙКА СРЕДЫ
  // Указывает, в каких средах будет выполняться код
  // browser = код выполняется в браузере (доступны window, document и т.д.)
  // es2021 = включает синтаксические возможности ES2021
  "env": {
    "browser": true,
    "es2021": true
  },

  // 2. НАСЛЕДОВАНИЕ КОНФИГУРАЦИЙ
  // Подключает готовые наборы правил от других пакетов
  // eslint:recommended = базовые правила от создателей ESLint
  // plugin:react/recommended = правила для React от плагина react
  // plugin:@typescript-eslint/recommended = правила для TypeScript
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended"
  ],

  // 3. ПАРСЕР (АНАЛИЗАТОР СИНТАКСИСА)
  // Указывает, какой парсер использовать для чтения кода
  // @typescript-eslint/parser = специальный парсер для TypeScript файлов
  "parser": "@typescript-eslint/parser",

  // 4. НАСТРОЙКИ ПАРСЕРА
  "parserOptions": {
    // Включает поддержку JSX синтаксиса
    "ecmaFeatures": {
      "jsx": true
    },
    // Указывает версию ECMAScript (latest = самая новая)
    "ecmaVersion": "latest",
    // Указывает, что используется модульная система (import/export)
    "sourceType": "module"
  },

  // 5. ПЛАГИНЫ
  // Подключает дополнительные наборы правил
  // react = правила для React компонентов
  // @typescript-eslint = правила для TypeScript
  // unused-imports = плагин для удаления неиспользуемых импортов
  "plugins": ["react", "@typescript-eslint", "unused-imports"],

  // 6. ПРАВИЛА - САМАЯ ВАЖНАЯ ЧАСТЬ
  // Здесь настраивается, какие именно проверки включать и как они должны работать
  "rules": {
    // 6.1. React правило: отключает требование импорта React в каждом файле
    // Актуально для React 17+, где импорт React не обязателен
    "react/react-in-jsx-scope": "off",

    // 6.2. ОТКЛЮЧЕНИЕ СТАНДАРТНЫХ ПРАВИЛ
    // Отключаем встроенное правило ESLint для неиспользуемых переменных
    "no-unused-vars": "off",
    // Отключаем TypeScript-версию этого правила
    "@typescript-eslint/no-unused-vars": "off",

    // 6.3. ПРАВИЛА ДЛЯ УДАЛЕНИЯ ИМПОРТОВ
    // Основное правило: помечает неиспользуемые импорты как ОШИБКИ (error)
    // Будет автоматически удалять их при запуске eslint --fix
    "unused-imports/no-unused-imports": "error",

    // 6.4. ПРАВИЛО ДЛЯ НЕИСПОЛЬЗУЕМЫХ ПЕРЕМЕННЫХ С НАСТРОЙКАМИ
    "unused-imports/no-unused-vars": [
      "warn", // Уровень серьезности: ПРЕДУПРЕЖДЕНИЕ (не блокирует компиляцию)
      {
        "vars": "all", // Проверять все переменные
        "varsIgnorePattern": "^_", // Игнорировать переменные, начинающиеся с _
        "args": "after-used", // Проверять аргументы функции, если они не используются после объявления
        "argsIgnorePattern": "^_" // Игнорировать аргументы, начинающиеся с _
      }
    ]
  },

  // 7. НАСТРОЙКИ ПЛАГИНОВ
  // Дополнительные конфигурации для конкретных плагинов
  "settings": {
    "react": {
      // Автоматически определяет версию React из package.json
      // Это нужно для корректной работы некоторых правил плагина react
      "version": "detect"
    }
  }
}
